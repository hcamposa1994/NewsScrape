<div class="row card">
    <h3 class="card-title">{{article.title}}</h3>

</div>
<div class="row">
    <div class="col s8">
        {{#each articles}}
        <div class="card w-100">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-subtitle">{{this.link}}</p>
                <form action="/delete/{{this.id}}" method="POST">
                    <a type="submit" class="btn btn-default">Save article</a>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>