<div class="row card">
    <h3 class="card-title">placeholder</h3>
</div>

<div class="row">
    <div class="col s8">
        {{#each dbArticle}}
        <div class="card w-100">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <a class="card-subtitle" href={{this.link}} target="_blank">Article link</a>
                <p class="card-text">{{this.summary}}</p>
                <form method="POST" action="/delete/{{this._id}}" >
                    <button type="submit" class="btn btn-default" value="{{this._id}}">delete article</button>
                </form>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                Launch demo modal
                </button>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="card col-6">
                <div class="card-header">
                    Featured
                </div>
                <ul class="list-group list-group-flush">
                  {{#each dbArticle}}
                    <li class="list-group-item">{{this.note}}</li>
                  {{/each}}
                </ul>
            </div>
            <div class="card text-center col-6">
                <h5 class="card-header">Card title</h5>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <form action="/notes/{{this._id}}" method="POST">
                        <textarea></textarea>
                        <button type="submit" class="btn btn-primary">Save note</button>
                    </form>
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>