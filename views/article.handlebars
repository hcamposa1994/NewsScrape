<div class="row">
    <div class="col s8">
        {{#each dbArticle}}
        <div class="card w-100">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <a class="card-subtitle" href={{this.link}} target="_blank">Article link</a>
                <p class="card-text">{{this.summary}}</p>
                <form action="/delete/{{this._id}}" method="POST">
                    <button type="submit" class="btn btn-default">delete article</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>