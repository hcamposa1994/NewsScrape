<div>
    <h1>Read from pc magazine</h1>
    <div class="row">
        <h5 class="card">
            click 'scrape' to get the latest articles
        </h5>
    </div>
</div>

<div class="row">
    <div class="col s8">
        {{#each dbArticle}}
        <div class="card w-100">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <a class="card-subtitle" href={{this.link}} target="_blank">Article link</a>
                <p class="card-text">{{this.summary}}</p>
                <form action="/save/{{this._id}}" method="POST">
                    <input id="article-data" type="hidden" name="article-data" value="{{this._id}}">
                    <button type="submit" class="btn btn-default">Save article</button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>